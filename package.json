{
  "name": "app-base-kit",
  "packageManager": "yarn@4.9.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "test": "jest",
    "lint:deps": "depcruise --config .dependency-cruiser.js packages/*",
    "prepare": "husky",
    "synth": "yarn workspace infrastructure synth",
    "deploy:network": "yarn workspace infrastructure deploy network-stack --auto-approve",
    "deploy:auth": "yarn workspace infrastructure deploy auth-stack --auto-approve"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.32.1",
    "dependency-cruiser": "^16.10.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript-eslint": "^8.32.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
